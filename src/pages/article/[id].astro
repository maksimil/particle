---
import "virtual:windi.css";
import SideBar from "@components/SideBar.astro";
import LinkButton from "@components/LinkButton";
import { getArticles } from "@api/article";

export const getStaticPaths = async () => {
  const articles = await getArticles();
  return articles.map((article) => {
    return { params: { id: article.id }, props: { article } };
  });
};

const { id } = Astro.params;
const { article } = Astro.props;

const chapterlinks = article.chapters.map((chapter) => {
  return [chapter.title, `/article/${id}/${chapter.id}`];
});

const links = [[article.title, `/article/${id}`], ...chapterlinks];
const current = article.title;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>particle</title>
  </head>
  <body>
    <div class="flex flex-row">
      <SideBar {links} {current} />
      <div class="flex-1">
        <div
          class={"border-b-3 border-l-3 border-c1 " +
            "text-4xl text-c3 pl-5 pt-2 pr-10 w-min flex flex-row items-center "}
        >
          <LinkButton
            url={`/article/${id}`}
            client:load
          />
          <span class="ml-4">{article.title}</span>
        </div>
      </div>
    </div>
  </body>
</html>
